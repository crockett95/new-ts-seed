{
    "compilerOptions": {
        "module": "ES2015",
        "target": "ESNext",
        "preserveConstEnums": true,
        "sourceMap": true,
        "typeRoots" : ["./node_modules/@types"],
        "strictNullChecks": true,
        "declaration": false,
        "moduleResolution": "node",
        "allowJs": true,
        "noEmit": true,
        "strict": true,
        "isolatedModules": true,
        "esModuleInterop": true
    },
    "include": [
        "src/**/*",
        "test/**/*"
    ],
    "exclude": [
      "dist/**/*"
    ]
}
